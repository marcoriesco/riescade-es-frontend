{
  "id": "riescade_platform_carousel_css",
  "name": "RIESCADE Platform (Carrousel CSS)",
  "version": "1.0.0",
  "author": "RIESCADE",
  "description": "Descrição do tema",
  "settings": [
    {
      "id": "background_color",
      "name": "Cor de Fundo",
      "type": "color",
      "default": "#000000"
    },
    {
      "id": "show_clock",
      "name": "Exibir Relógio",
      "type": "boolean",
      "default": true
    },
    {
      "id": "transition_style",
      "name": "Estilo de Transição",
      "type": "select",
      "options": [
        { "value": "fade", "label": "Fade" },
        { "value": "slide", "label": "Slide" },
        { "value": "none", "label": "Nenhum" }
      ],
      "default": "fade"
    }
  ]
}
